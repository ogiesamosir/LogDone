<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryActivity"
    android:orientation="horizontal"
    android:background="@drawable/pink_bg">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src ="@drawable/ic_baseline_arrow_back_24"
        android:layout_gravity="left"
        android:background="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="70dp"
            android:background="@drawable/cerita"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:fontFamily="times"
                android:layout_gravity="center"
                android:text="Cerita Inspiratif"
                android:textColor="#185A74"
                android:textSize="36dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll1"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/cerita_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/cvDetStory1">

            <androidx.cardview.widget.CardView
                android:layout_width="122dp"
                android:layout_height="126dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#FDCFDF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="126dp"
                        android:layout_height="122dp"
                        android:layout_gravity="center"
                        android:background="@drawable/maudy" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Maudy Ayunda bimbang dalam memilih Harvard University atau Oxford University."
                android:textColor="#185A74"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                />
            <TextView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/panah"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll2"
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cerita_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="122dp"
                android:layout_height="126dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#FDCFDF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/nadim" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Kisah inspiratif Nadiem Makarin yang dikenal sebagai Sang Pendiri Gojek ."
                android:textColor="#185A74"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat" />
            <TextView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/panah"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll3"
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cerita_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="122dp"
                android:layout_height="126dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#FDCFDF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="122dp"
                        android:layout_gravity="center"
                        android:background="@drawable/najwa" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="25dp"
                android:text="Kisah inpiratif Najwa Shihab pembawa berita di acara Televisi yang dapat memotivasi."
                android:textColor="#185A74"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat" />
            <TextView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/panah"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

</ScrollView>